<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent"

    tools:context="com.qtrandev.arex.ArexMainMenuActivity"
    android:background="#ff0a0004"
     android:orientation="vertical"
    android:id="@+id/linLay"
    android:useDefaultMargins="false"
    android:weightSum="1">

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webView"
        android:layout_weight="1.84" />

    <TextView
        android:text="A.R.EX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/textView"

        android:textColor="#fff8fff2"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="80dp" android:visibility="invisible"/>






        <com.facebook.share.widget.ShareButton
            android:id="@+id/share_button"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:onClick="shareClick"
            android:layout_row="7"
            android:layout_column="0"
            android:text="New AR Scan" android:visibility="invisible" />

        <Button
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Post Photo to Wall"
        android:id="@+id/postphoto"
        android:onClick="dispatchTakePictureIntentWallPost"

        android:layout_row="9"
        android:layout_column="0"
            android:layout_gravity="center_vertical" android:visibility="invisible"/>

        <Button
        android:id="@+id/regularButton"
        android:layout_width="101dp"
        android:layout_height="72dp"
        android:text="Promote on Messenger"
        android:onClick="messengerClick"
        android:layout_row="8"
        android:layout_column="0" android:visibility="invisible" />


</LinearLayout>
